<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <TextView
        android:id="@+id/txt_ReceiptSummarySerialNum"
        style="?textRetriever"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"        
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>

    <TextView
        android:id="@+id/txt_ReceiptSummaryListDate"
        style="?textRetriever"
        android:layout_width="90dp"
        android:layout_height="wrap_content"        
        android:gravity="center|left"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>

    <TextView
        android:id="@+id/txt_ReceiptSummaryListReciptNo"
        style="?textRetriever"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"        
        android:layout_marginLeft="5dp"        
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>
	
    <TextView
        android:id="@+id/txt_ReceiptSummaryListCustNo"
        style="?textRetriever"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"        
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>
    
    <TextView
        android:id="@+id/txt_ReceiptSummaryListCustName"
        style="?textRetriever"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"        
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>
    
    <TextView
        android:id="@+id/txt_ReceiptSummaryListType"
        style="?textRetriever"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"        
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>
    <TextView
        android:id="@+id/txt_ReceiptSummaryListAmount"
        style="?textRetriever"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="5dp"                
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>
    
    <TextView
        android:id="@+id/txt_ReceiptSummaryListUnAmount"
        style="?textRetriever"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="5dp"       
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>

</LinearLayout>