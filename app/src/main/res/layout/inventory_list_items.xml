<!-- Parent Linear layout with horizontal orientation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <TextView
        android:id="@+id/txt_InventorySerialNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="?textRetriever"
        android:layout_weight="15"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>

    <TextView
        android:id="@+id/txt_InventoryListItemNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        style="?textRetriever"
        android:gravity="center|left"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>

    <TextView
        android:id="@+id/txt_InventoryListItemDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="35"
        style="?textRetriever"
        android:gravity="center|left"
        android:text=""
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>

    <TextView
        android:id="@+id/txt_InventoryListItemQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        style="?textRetriever"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall">
    </TextView>
    
    <TextView
        android:id="@+id/txt_InventoryListItemPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        style="?textRetriever"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" >
    </TextView>
</LinearLayout>